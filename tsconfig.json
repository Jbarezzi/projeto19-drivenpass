{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "routers/*": ["./routers/*"],
      "utils/*": ["./utils/*"],
      "repositories/*": ["./repositories/*"],
      "middlewares/*": ["./middlewares/*"],
      "controllers/*": ["./controllers/*"],
      "services/*": ["./services/*"],
      "database/*": ["./database/*"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
